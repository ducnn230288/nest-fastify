<div
  id='section5'
  class='mil-section fade fadeOut relative z-10 w-full h-screen flex justify-center items-center max-xl:h-auto xl:pt-28 pb-32'
>
  <div class='box-bg w-72 h-96 absolute -z-10 bottom-3/4 right-1/4 -rotate-12 opacity-35 rounded-full bg-black'></div>

  <div class='box-bg w-24 h-36 absolute -left-28 -z-10 -rotate-12 opacity-35 rounded-full bg-black'></div>

  <div class='w-72 h-96 opacity-35 -rotate-12 absolute box-bg top-1/3 -left-0 -z-10 rounded-full'></div>

  <div class='container w-full mx-auto px-8 max-w-7xl mt-10'>
    <p class='text-black uppercase font-Jost-Font font-semibold text-base mb-7'>
      {{paraExperience.note}}
    </p>

    <h2
      class='text-black uppercase font-Jost-Font font-bold xl:text-6xl lg:text-5xl md:text-4xl sm:text-4xl text-3xl mb-14 text-shadow'
    >
      {{paraExperience.code}}
    </h2>

    <div class='flex flex-wrap mt-8'>
      <div class='xl:w-6/12 lg:w-6/12'>
        <div class='flex col-start-1 justify-start items-center'>
          <p class='text-black font-Jost-Font font-light text-lg leading-8 mb-16'>
            {{paraExperience.description}}
          </p>
        </div>
      </div>

      <div class='xl:w-4/12 lg:w-4/12 xl:px-4'>
        <div class='flex col-start-2 justify-end items-center'>
          <div class='w-auto mr-7 mb-7 text-black uppercase font-Jost-Font font-semibold text-base swiper-pag'>
            <span>1</span>
            /
            <span>4</span>
          </div>
          <div class='flex swiper-button1 justify-between items-center mb-7'>
            <button
              id='prevPage'
              class='swiper-button-prev flex justify-center items-center w-16 h-16 border-2 border-solid border-black box-border shadow-custom-dark duration-500 ease-custom-cubic hover:shadow-none mr-4'
            >
              <i class='fa-solid fa-chevron-left'></i>
            </button>
            <button
              id='nextPage'
              class='swiper-button-next flex justify-center items-center w-16 h-16 border-2 border-solid border-black box-border shadow-custom-dark duration-500 ease-custom-cubic hover:shadow-none mr-4'
            >
              <i class='fa-solid fa-chevron-right'></i>
            </button>
          </div>
        </div>
      </div>

      <div class='relative border-t-2 border-solic border-gray-300 w-full xl:mt-0 mt-20'>
        <div class='absolute border-t-2 border-solid border-black -left-2 -top-2 bottom-1 right-2 w-full'></div>
      </div>

      <div class='max-w-full xl:px-4'>
        <div class='swiper swiper-section-experience pt-14 overflow-hidden touch-pan-y'>
          <div id='content-exp' class='swiper-wrapper relative flex w-full h-full box-content transform duration-0'>
            {{#each experiences}}
              <div class='swiper-slide'>
                <div class='mr-10 mb-7 flex'>
                  <div class='w-full'>
                    <p class='text-black uppercase font-Jost-Font font-semibold text-base mb-2'>
                      {{name}}
                    </p>

                    <p class='text-black uppercase font-Jost-Font font-medium text-sm mb-5'>
                      {{getYear startTime}}
                      <span class='text-orange-600'> to </span>
                      {{getYear endTime}}
                    </p>

                    <p class='text-black font-Jost-Font font-light text-lg leading-8'>
                      {{#with (lookup translations 0)}}
                        {{this.description}}
                      {{/with}}
                    </p>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>